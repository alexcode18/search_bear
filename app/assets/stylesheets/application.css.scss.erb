@import url(https://fonts.googleapis.com/css?family=Raleway:400,500,600,700);

.clearfix:after {
    content: ".";
    display: block;
    clear: both;
    visibility: hidden;
    line-height: 0;
    height: 0;
    
}
 
.clearfix {
    display: inline-block;
    width:100%;
}

html {
	font-family: 'Raleway', Arial;
	font-weight: 500;
	letter-spacing: 3px;
	background: #C0DBF3;
	color: grey;
}

img {
	height: 300px;
}

header {
	padding: 15px;
	font-size: 16pt;
	position: fixed;
	top: 0px;
	left: 0px;
	width:100%;
	z-index: 5;
}

header li {
	display: inline-block;
}

header a {
	cursor: pointer;
}

#left_cave_wall,
#right_cave_wall,
#grey_top_bar {
	position: fixed;
	top: -25px;
}

#left_cave_wall,
#right_cave_wall {
	width: 445px;
	height: 432px;
}

#left_cave_wall {
	z-index: -1;
	background: url('<%= asset_path('search_bear-06.png') %>') 0 0 no-repeat;
	background-size: 445px 432px;
}

#right_cave_wall {
	z-index: 0;
	background: url('<%= asset_path('search_bear-07.png') %>') 0 0 no-repeat;
	background-size: 445px 432px;
	right: 0;
}

.container h3,
.container h4 {
	text-align: center;
	padding: 5px;
}

button,
header a {
	text-transform: uppercase;
	background-color: white;
	border-radius: 5px;
	color: grey;
	background: transparent;
	font-size: 10pt;
}

button,
input,
header a {
	padding: 8px;
	border: 1px solid grey;	
}

button:hover,
header a:hover {
	background: rgba(192,192,192,.6);
}

#logo {
	height: 15px;
	float: left;
	padding-right: 10px;
}

.container {
	z-index: 12;
	background: white;
	padding: 10px;
}

#login {
	width: 500px;
	position: absolute;
	margin: 10% 30%;
}

#login button {
	margin: 0 auto;
}

.container input {
	margin: 5px;
}

.search_image {
	width: 400px;
	height: 200px;
	overflow: hidden;
	cursor: move;
	border-radius: 20px;
	-o-border-radius: 20px;
	-webkit-border-radius: 20px;
	-moz-border-radius: 20px;
	border: 5px solid white;
}

#bear_land {
	max-width: 100%;
	padding: 40px;
	text-align: center;
}

#search_bar {
	text-align: center;
	padding-bottom: 10px;
}

#search_bar input {
	padding: 5px;
	font-size: 2em;
	width: 35%;
	vertical-align: top;
}

#search_button {
	background: url('https://www.z2systems.com/neon/resource/start/images/20140729192722_550.png?t=1406680084882&t=1406680162928&t=1406680463548') 0 0 no-repeat;	
}

#search_zone {
	width: 100%;
	padding: 10px;
	box-shadow: 1px 1px 2px #888888;
}

#searches_box {
	padding-top: 10px;
	height: 300px;
	overflow-y: scroll;
}

#search_bar_label {
	display: none;
}

#memory_box {
	width: 100%;
	height: 100%;
	overflow-y: scroll;
	margin: 0 auto;
}

.memory_item {
	background: white;
	width: 400px;
	margin: 10px;
	float: left;
	text-align: center;
}

.memory_item img {
	width: 350px;
}

#memory_drop {
	border: 5px dashed white;
	width: 400px;
	height: 200px;
	margin-top: 150px;
	border-radius: 20px;
	-o-border-radius: 20px;
	-webkit-border-radius: 20px;
	-moz-border-radius: 20px;
}

.bear {
	background: url('<%= asset_path('search_bear-04.png') %>') 0 0 no-repeat;
	background-size: 300px;
	overflow: hidden;
	width: 250px;
	height: 300px;
}

.bear_talk {
	background: white;
	height: 100px;
	width: 100px;
	border-radius: 20px;
	-o-border-radius: 20px;
	-webkit-border-radius: 20px;
	-moz-border-radius: 20px;
}

.bear_bar div {
	margin: 5px;
	width: 25px;
	background: #1C75BC;
}

#bear_ul li{	
	min-height: 330px;
	height: 330px;
	vertical-align: top;
}

.bear_bar li,
#bear_ul li {
	height: 100px;
	display: inline-block;
}

.bear_bar li,
.bear_bar {
	vertical-align: bottom;
}

#energy,
#happy,
#hungry {
	vertical-align: bottom;
}

.bear_blink {
	background-position: 0px -300px;
}